<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@drawable/reg"
    tools:context=".Register">

    <ImageView
        android:id="@+id/rlogo"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:background="#00ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/rtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="Create account"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_button1"
        android:text="Sign In"
        android:textColor="#5375e4"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rusername"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/rounded_button2"
        android:hint="Username"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rtext" />
    <EditText
        android:id="@+id/remail"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Email"
        android:background="#F1F3F4"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rusername"
        android:layout_marginTop="2dp"
        android:paddingLeft="20dp"/>
    <EditText
        android:id="@+id/rpassword"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Password"
        android:background="@drawable/rounded_button3"
        android:textSize="20sp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remail"
        android:layout_marginTop="2dp"
        android:paddingLeft="20dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/rsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="272dp"
        android:layout_marginLeft="272dp"
        app:layout_constraintBottom_toBottomOf="@+id/remail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rusername"
        app:srcCompat="@drawable/ic_check" />

    <TextView
        android:id="@+id/roption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or create account using social media"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />
    <ImageView
        android:id="@+id/rgoogle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rfacebook"
        app:layout_constraintTop_toBottomOf="@+id/roption"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/rfacebook"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/facebook"
        app:layout_constraintStart_toEndOf="@+id/rgoogle"
        app:layout_constraintEnd_toStartOf="@+id/rtwitter"
        app:layout_constraintTop_toTopOf="@+id/rgoogle"/>
    <ImageView
        android:id="@+id/rtwitter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/twitter"
        app:layout_constraintStart_toEndOf="@+id/rfacebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rfacebook"/>





</androidx.constraintlayout.widget.ConstraintLayout>
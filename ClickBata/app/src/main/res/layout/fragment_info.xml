                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:paddingLeft="8dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_button6"
                        android:hint="Enter your comments" />
